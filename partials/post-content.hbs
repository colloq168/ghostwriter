<article class="post-container {{post_class}}">
    <header class="post-header">
        <h1 class="post-title">{{title}}</h1>

        <p class="post-date"><strong>由 {{author}}</strong> 发布于 <time datetime="{{published_at}}">{{date format="YYYY/MM/DD"}}</time> </p>
    </header>

    <div class="post-content clearfix">
        {{#if image}}
            <img class="post-featured-image" src="{{image}}">
        {{/if}}

        {{{content}}}
    </div>

    <footer class="post-footer clearfix">
        {{#if tags}}
            <p class="post-tags"><span>标签:</span> {{tags}}</p>
        {{/if}}

        <div class="share">
		<a class="icon-share" href="http://service.weibo.com/share/share.php?url={{url absolute="true"}}"
		onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
		<i class="fa fa-weibo"></i>
        <span class="hidden">Weibo</span>
		</a>
		<a class="icon-share" href=" http://sns.qzone.qq.com/cgi-bin/qzshare/cgi_qzshare_onekey?desc={{encode title}}"
		onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
        <i class="fa fa-qq"></i>
        <span class="hidden">Qq</span>
		</a>
		<a class="icon-share" href="http://twitter.com/share?text={{encode title}}&url={{url absolute="true"}}"
		onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
		<i class="fa fa-twitter"></i>
        <span class="hidden">Twitter</span>
		</a>
		<a class="icon-share" href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"
		onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
		<i class="fa fa-facebook"></i>
        <span class="hidden">Facebook</span>
		</a>
        </div>
    </footer>
</article>